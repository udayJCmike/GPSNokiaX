<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:id="@+id/relativelay"
     
    android:background="@drawable/loginpage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/signin"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pswd"
        android:layout_below="@+id/pswd"
        android:layout_marginTop="50dp"
        android:background="@drawable/loginbutton" />

    <Button
        android:id="@+id/reset"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/signin"
        android:layout_alignBottom="@+id/signin"
        android:layout_alignRight="@+id/pswd"
        android:background="@drawable/resetbutton" />

    <EditText
        android:id="@+id/username"
        style="@style/custom"
        android:layout_width="280dp"
        android:singleLine = "true"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="377dp"
        android:background="#00000000"
        android:ems="10"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:inputType="textPersonName"
        android:text="" >
      
    </EditText>

    <EditText
        android:id="@+id/pswd"
        style="@style/custom"
        android:layout_width="280dp"      
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/username"
        android:layout_below="@+id/username"
        android:layout_marginTop="76dp"
        android:background="#00000000"
        android:ems="10"
        android:singleLine = "true"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"
        android:inputType="textPassword" />

</RelativeLayout>